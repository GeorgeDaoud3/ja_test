pipeline {
  environment {
    //PROJECT = "REPLACE_WITH_YOUR_PROJECT_ID"
	PROJECT = "green-tract-379622"
    APP_NAME = "binary-calculator"
	IMAGE_TAG = "gcr.io/${PROJECT}/${APP_NAME}"
    JENKINS_CRED = "My Project 65158"
	SVC_NAME = "bin-calc-srv"
	SA_ID="jenkins-sa@green-tract-379622.iam.gserviceaccount.com"
	GCP_KEY= credentials('sa_key')
  }
  
agent {
    kubernetes {
    cloud "kubernetes"
	label 'sample-app'
      defaultContainer 'jnlp'
      yaml """
apiVersion: v1
kind: Pod
metadata:
labels:
  component: ci
spec:
  # Use service account that can deploy to all namespaces
  serviceAccountName: cd-jenkins
  containers:
  - name: gcloud
    image: gcr.io/cloud-builders/gcloud
    //image: google/cloud-sdk:latest
    command:
    - cat
    tty: true
  - name: kubectl
    image: gcr.io/cloud-builders/kubectl
    command:
    - cat
    tty: true
"""
}
  }
  tools {
    maven 'maven' 
  }
  stages {
    stage ('Init') {
      steps {
	    checkout scm
        sh 'echo "Start of Job"'
		//sh 'echo ${GCP_KEY}'
      }
    }
    stage ('test') {
      steps {
        sh 'mvn clean test -f ./BinaryCalculatorWebapp/pom.xml'
      }
    }
    stage ('build') {
      steps {
        sh 'mvn package -DskipTests -f ./BinaryCalculatorWebapp/pom.xml'
      }
    }
    stage('Build and push image with Container Builder') {
      steps {
      container('gcloud') {

		  sh "/builder/google-cloud-sdk/bin/gcloud auth activate-service-account ${SA_ID} --key-file=${GCP_KEY} --project=${PROJECT}"
		  sh "/builder/google-cloud-sdk/bin/gcloud builds submit -t ${IMAGE_TAG} ./BinaryCalculatorWebapp/"
		}		
      }
    }
	stage('deploy to GKE') {
		steps{
			container('kubectl') {
			  sh "/builder/google-cloud-sdk/bin/gcloud auth activate-service-account ${SA_ID} --key-file=${GCP_KEY} --project=${PROJECT}"
			  sh("sed -i.bak 's#binaryCalculator_ImageName#${IMAGE_TAG}#' ./BinaryCalculatorWebapp/k8s/production/*.yaml")
			  script{
			  try
			  {
				sh "/builder/google-cloud-sdk/bin/kubectl delete -f ./BinaryCalculatorWebapp/k8s/production/*.yaml"
			  }
			  catch (err) {
				echo "service was not created before"
			  }}
			  sh "/builder/google-cloud-sdk/bin/kubectl create -f ./BinaryCalculatorWebapp/k8s/production/*.yaml"
			  script{
			  try{
				sh "/builder/google-cloud-sdk/bin/kubectl create -f ./BinaryCalculatorWebapp/k8s/services/*.yaml"
			  }
			  catch (err) {
				echo "service is created"
			  }}
			  sh "/builder/google-cloud-sdk/bin/kubectl get  service ${SVC_NAME} -o jsonpath='{.status.loadBalancer.ingress[0].ip}'"
			}
		}
	}
  }
}